{
  "person": {
    "$id": "person",
    "type": "object",
    "properties": {
      "id": {
        "type": "integer",
        "description": "The unique identifier for the person"
      },
      "name": {
        "type": "string",
        "description": "Name of the person"
      },
      "emailAddress": {
        "type": "string",
        "description": "Email address of the customer"
      }
    },
    "required": [ "id", "name" ],
    "description": "A person object (base schema)"
  },
  "email": {
    "$id": "email",
    "type": "object",
    "properties": {
      "subject": {
        "type": "string",
        "description": "Subject of the email"
      },
      "content": {
        "type": "string",
        "description": "Content of the email"
      },
      "customer": {
        "allOf": [
          { "$ref": "person" },
          {
            "type": "object",
            "required": [ "emailAddress" ],
            "description": "Person with required email for email context"
          }
        ]
      }
    }
  },
  "product": {
    "$id": "product",
    "type": "object",
    "properties": {
      "productId": {
        "type": "integer",
        "description": "The unique identifier for a product"
      },
      "productName": {
        "type": "string",
        "description": "Name of the product"
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Tags associated with the product"
      },
      "owner": {
        "$ref": "person"
      }
    }
  }
}